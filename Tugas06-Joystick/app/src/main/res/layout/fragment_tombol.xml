<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.tugas06_joystick.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kiri"
        android:src = "@drawable/kiri"
        android:layout_below="@+id/atas"
        android:layout_toLeftOf="@+id/bawah"
        android:layout_toStartOf="@+id/bawah"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/atas"
        android:src = "@drawable/atas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kanan"
        android:src = "@drawable/kanan"
        android:layout_above="@+id/bawah"
        android:layout_toRightOf="@+id/bawah"
        android:layout_toEndOf="@+id/bawah"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bawah"
        android:src = "@drawable/bawah"
        android:layout_below="@+id/kiri"
        android:layout_alignLeft="@+id/atas"
        android:layout_alignStart="@+id/atas"
        android:onClick="onClick" />

</RelativeLayout>
