<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.tugas02_terjemahkan.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ing"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombolInd"
        android:id="@+id/tombolInd"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="180dp"
        android:onClick="onClickTejemahkanInd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombolAceh"
        android:id="@+id/tombolAceh"
        android:layout_below="@+id/tombolInd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="180dp"
        android:onClick="onClickTejemahkanAceh" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombolIng"
        android:id="@+id/tombolIng"
        android:layout_below="@+id/tombolAceh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="180dp"
        android:onClick="onClickTejemahkanIng" />

</RelativeLayout>
