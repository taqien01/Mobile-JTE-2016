<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.testawaljoystick.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X1"
        android:id="@+id/x1"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/y1"
        android:layout_toStartOf="@+id/y1"
        android:onClick="click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y1"
        android:id="@+id/y1"
        android:layout_alignTop="@+id/x1"
        android:layout_centerHorizontal="true"
        android:onClick="click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z1"
        android:id="@+id/z1"
        android:layout_above="@+id/x2"
        android:layout_alignLeft="@+id/z2"
        android:layout_alignStart="@+id/z2"
        android:onClick="click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X2"
        android:id="@+id/x2"
        android:layout_below="@+id/x1"
        android:layout_alignRight="@+id/x1"
        android:layout_alignEnd="@+id/x1"
        android:layout_marginTop="50dp"
        android:onClick="click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y2"
        android:id="@+id/y2"
        android:layout_alignTop="@+id/x2"
        android:layout_toRightOf="@+id/x2"
        android:layout_toEndOf="@+id/x2"
        android:onClick="click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z2"
        android:id="@+id/z2"
        android:layout_alignTop="@+id/y2"
        android:layout_toRightOf="@+id/y2"
        android:layout_toEndOf="@+id/y2"
        android:onClick="click" />

</RelativeLayout>
