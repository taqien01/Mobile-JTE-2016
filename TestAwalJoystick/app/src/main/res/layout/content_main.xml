<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:weightSum="1">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:name="id.ac.unsyiah.elektro.mobile.testawaljoystick.MainActivityFragment"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    tools:layout="@layout/fragment_main" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="id.ac.unsyiah.elektro.mobile.testawaljoystick.FragBawah"
        android:id="@+id/fragmentbawah"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/fragment_bawah" />

</LinearLayout>